{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "single"],
        "no-any": false,
        "ordered-imports": false,
        "arrow-parens": false,
        "trailing-comma": [
            true,
            {
              "multiline": {
                "objects": "always",
                "arrays": "always",
                "functions": "never",
                "typeLiterals": "ignore"
              },
              "esSpecCompliant": true
            }
          ]
    },
    "rulesDirectory": []
}